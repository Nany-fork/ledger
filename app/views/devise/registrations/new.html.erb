
<div class="hero-body">
   <div class="container has-text-centered">
      <p class="title">
        Sign up
      </p>
    </div>
  <h1 class="subtitle is-1"></h1>
  <%# aqui %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field is-grouped is-grouped-centered"->
          <p class="control">
            <div class="field">
              <%= f.label :name %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'input'%>
            </div>
          </p>
          <p class="control">
            <div class="field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input'%>
            </div>
          </p>
        </div>
        <div class="field is-grouped is-grouped-centered"->
          <p class="control">
            <div class="field">
              <%= f.label :phone %><br />
              <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class: 'input'%>
            </div>
          </p>
          <p class="control">
            <div class="field">
              <%= f.label :location %><br />
              <%= f.text_field :location, autofocus: true, autocomplete: "location", class: 'input' %>
            </div>
          </p>
          </div>

          <div class="field is-grouped is-grouped-centered"->
            <p class="control">
              <div class="field">
                <%= f.label :password %>
                  <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                  <%= f.password_field :password, autocomplete: "new-password", class: 'input'%>
              </div>
            </p>
            <p class="control">
              <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input'%>
              </div>
            </p>
          </div>

          <div class="field is-grouped is-grouped-centered">
            <p class="control">
              <div class="actions">
                <%= f.submit "Sign up", data: {turbo: false},class: 'button is-black' %>
              </div>  
            </p>
            <p class="control">
              <div class="actions">
                <%# <%= render "devise/shared/links" %>
                <%= link_to "Login", user_session_path ,class:'button is-outlined' %>
              </div>  
            </p>
          </div>
    <% end %>
<%# aqui %>
  
</div>